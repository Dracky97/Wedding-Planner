rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows any authenticated user (request.auth != null)
    // to read and write to any document within a plan.
    match /plans/{planId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // This rule allows users to manage their own plan associations
    match /users/{userId}/plans/{planAssociationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // This rule allows users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Admin rules
    match /blogs/{blogId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}