rules_version = '2';

// Service for Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {
  
    // Match any file path inside a plan's folder
    // e.g., /plans/{planId}/documents/{docId}/contract.pdf
    match /plans/{planId}/{allPaths=**} {
    
      // Allow read/write (get, create, delete) IF
      // 1. The user is logged in (request.auth != null)
      // 2. The file size is less than 5MB (to prevent abuse)
      allow read, write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }
  }
}