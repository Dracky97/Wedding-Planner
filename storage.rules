rules_version = '2';

// Service for Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {
  
    // Match any file path inside a plan's folder
    // e.g., /plans/{planId}/documents/{docId}/contract.pdf
    match /plans/{planId}/{allPaths=**} {
    
      // Allow ANYONE with the unguessable link to read the file.
      allow read; 

      // Allow ONLY authenticated users to write (upload/delete) files
      // and enforce the 5MB size limit on new uploads.
      allow write: if request.auth != null 
        && request.resource.size < 5 * 1024 * 1024;
    }
  }
}